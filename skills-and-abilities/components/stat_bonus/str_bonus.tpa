// Import Files                                                          //
///////////////////////////////////////////////////////////////////////////
ACTION_FOR_EACH str_import IN
      1 // 18 STR +1 DMG
      2 // 19 STR +3 DMG
      3 // 20 STR +4 DMG
      4 // 22 STR +5 DMG
      5 // 24 STR +6 DMG
      6 // 25 STR +7 DMG
    BEGIN
      COPY ~skills-and-abilities/spl/str_bonus/MOSTR0%str_import%.SPL~              ~override/MOSTR0%str_import%.SPL~
      COPY ~skills-and-abilities/spl/str_bonus/MOSTR0%str_import%%str_import%.SPL~  ~override/MOSTR0%str_import%%str_import%.SPL~
      COPY ~skills-and-abilities/eff/str_bonus/MOSTR0%str_import%.EFF~              ~override/MOSTR0%str_import%.EFF~
    END

